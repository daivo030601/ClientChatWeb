@model IEnumerable<Topic>

<div class="row">
    <div class="col-md-3">
        <h2>Topics</h2>
        <hr />
        <ul class="list-group">
            @foreach (var topic in Model)
            {
                <li class="list-group-item" data-topic-id="@topic.TopicId">
                    <h3>@topic.TopicName</h3>
                </li>
            }
        </ul>
    </div>
    <div class="col-md-9">
        @if (ViewBag.Topic != null)
        {
            <h2>@ViewBag.Topic.Name</h2>
            <hr />
            <div class="card">
                <div class="card-body">
                    <div id="messages">
                        @foreach (var message in ViewBag.Topic.Messages)
                        {
                            <div class="message">
                                <div class="message-username">@message.Username</div>
                                <div class="message-text">@message.Text</div>
                                <div class="message-time">@message.TimeStamp.ToString("yyyy-MM-dd HH:mm:ss")</div>
                            </div>
                        }
                    </div>
                    <form id="new-message-form" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="username" placeholder="Username" />
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="text" placeholder="Message"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Send</button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

<script>
    // Attach click event handler to each topic list item
    var topicListItems = document.querySelectorAll(".list-group-item");
    var messages = [
        { MessageId: 1, SentDate: new Date(), Content: "Hello, world!", ClientName: "Alice", ClientId: 1, TopicId: 1 },
        { MessageId: 2, SentDate: new Date(), Content: "How are you doing?", ClientName: "Bob", ClientId: 2, TopicId: 1 },
        { MessageId: 3, SentDate: new Date(), Content: "I'm good, thanks for asking!", ClientName: "Alice", ClientId: 1, TopicId: 1 },
        { MessageId: 4, SentDate: new Date(), Content: "What have you been up to lately?", ClientName: "Bob", ClientId: 2, TopicId: 1 },
        { MessageId: 5, SentDate: new Date(), Content: "Not much, just working on some projects.", ClientName: "Alice", ClientId: 1, TopicId: 1 },
        { MessageId: 6, SentDate: new Date(), Content: "Sounds interesting! Tell me more.", ClientName: "Bob", ClientId: 2, TopicId: 1 },
        { MessageId: 7, SentDate: new Date(), Content: "Sure, I'd be happy to.", ClientName: "Alice", ClientId: 1, TopicId: 1 }
    ];

    topicListItems.forEach(function (item) {
        var topics = @Html.Raw(Json.Serialize(Model));
        item.addEventListener("click", function () {
            var topicId = item.getAttribute("data-topic-id");
            console.log(topics.topicId);
            topics.topicId.push(...messages);
            
        });
    })
</script>

